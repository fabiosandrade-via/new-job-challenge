version: '3.8'
services:
  new-job-challenge-carrefour-api:
    image: img-new-job-challenge-carrefour-api
    container_name: ctn-new-job-challenge-carrefour-api
    build:
      context: .
    ports:
      - "8080:80"
    environment:
      NODE_ENV: development
      DB_HOST: db
      DB_PORT: 5432
      DB_USER: postgres
      DB_PASSWORD: postgres
      DB_NAME: postgres      
    networks:
      - carrefour-api-network        
    depends_on:
    - new-job-challenge-carrefour-db-cache
    - new-job-challenge-carrefour-postgres
    - kafka
    ##- new-job-challenge-carrefour-kafka
    links:
    - new-job-challenge-carrefour-db-cache
    - new-job-challenge-carrefour-postgres
    - kafka
    ##- new-job-challenge-carrefour-kafka    

  new-job-challenge-carrefour-db-cache:
    image: redis:5-alpine
    container_name: ctn-new-job-challenge-carrefour-cache
    restart: always
    volumes:
      - cache:/data  
    ports:
      - 6379:6379
    command: redis-server
    
  new-job-challenge-carrefour-postgres:
    image: postgres:14.1-alpine
    restart: always
    container_name: ctn-new-job-challenge-carrefour-postgres
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    ports:
      - "5432:5432"
    volumes:
      - C:\PostegresDb\data:/data/db
    networks:
      - postgres-compose-network    
            
  zookeeper:
    image: confluentinc/cp-zookeeper:latest
    networks: 
      - kafka-compose-network
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000

  kafka:
    image: confluentinc/cp-kafka:latest
    networks: 
      - kafka-compose-network
    depends_on:
      - zookeeper
    ports:
      - 9092:9092
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      
networks:
    postgres-compose-network:
      driver: bridge  
    carrefour-api-network:
      attachable: true   
    kafka-compose-network:
      driver: bridge
volumes:
  cache:
    driver: local